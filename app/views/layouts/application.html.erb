  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-warning d-flex justify-content-between">
      <%= link_to "WATCHLIST", root_path, class:"navbar-brand p-2" %>
    </nav>
    <%= yield %>
  </body>
</html>
